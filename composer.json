{
    "name": "mr-php/timesheet",
    "minimum-stability": "stable",
    "require": {
        "fxp/composer-asset-plugin": "*",
        "vlucas/phpdotenv": "2.*",
        "yiisoft/yii2": "^2.0.8",
        "yiisoft/yii2-bootstrap": "2.*",
        "yiisoft/yii2-debug": "2.*",
        "codemix/yii2-streamlog": "^1.0.0",
        "ajt/guzzle-toggl": "^1.0.0",
        "dlin/saasu": "dev-master",
        "yii2mod/yii2-settings": "*",
        "dmstr/yii2-migrate-command": "*",
        "bower-asset/sweetalert": "1.1.*",
        "cebe/yii2-gravatar": "*",
        "upwork/php-upwork": "^1.2",
        "calcinai/xero-php": "^2.4"
    },
    "config": {
        "fxp-asset": {
            "installer-paths":{
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower"
            },
            "vcs-driver-options": {
                "github-no-api": true
            },
            "pattern-skip-version": "(-build|-patch)"
        }
    }
}
